{
    "editor.codeActionsOnSave": {
        "source.organizeImports": true,
    },
    "editor.formatOnSave": true,
    "python.analysis.diagnosticMode": "workspace",
    "python.analysis.indexing": false, // true may be better
    "python.analysis.typeCheckingMode": "basic",
    "python.analysis.autoImportCompletions": true,
    "python.defaultInterpreterPath": "${workspaceFolder}/venv/bin/python",
    "python.envFile": "${workspaceFolder}/.env",
    "python.formatting.provider": "none",
    "python.languageServer": "Pylance",
    "isort.path": [
        "${workspaceFolder}/venv/bin/python",
        "-m",
        "isort"
    ],
    "isort.args": [
        "--src=${workspaceFolder}"
    ],
    "black-formatter.args": [
        "--line-length",
        "79"
    ],
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/.mypy_cache": true,
        "**/*.egg-info": true,
        "**/__pycache__": true,
        "**/node_modules": true,
    },
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter"
    },
    "cmake.sourceDirectory": "${workspaceFolder}/CardGames",
    "cmake.buildDirectory": "${workspaceFolder}/CardGames/build",
    "files.associations": {
        "stdexcept": "cpp",
        "vector": "cpp",
        "random": "cpp",
        "__bit_reference": "cpp",
        "__hash_table": "cpp",
        "__split_buffer": "cpp",
        "__tree": "cpp",
        "array": "cpp",
        "deque": "cpp",
        "filesystem": "cpp",
        "forward_list": "cpp",
        "initializer_list": "cpp",
        "list": "cpp",
        "map": "cpp",
        "set": "cpp",
        "string": "cpp",
        "string_view": "cpp",
        "unordered_map": "cpp",
        "unordered_set": "cpp",
        "valarray": "cpp",
        "algorithm": "cpp"
    }
}